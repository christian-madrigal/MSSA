@model Assignment_12._2.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Books</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Books[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Books[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Books[0].Title)
            </th>

        </tr>
    </thead>
<tbody>
    @foreach(var item in Model.Books)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem=>item.Id)</td>
                <td>@Html.DisplayFor(modelitem=>item.Author)</td>
                <td>@Html.DisplayFor(modelitem=>item.Title)</td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>



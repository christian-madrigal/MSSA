@model Assignment_13._2.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Product</h1>
<table class="table">
<thead>
    <tr>
        <th>
           @* displays heading for column id*@
            @Html.DisplayNameFor(model=>model.Products.Last().Id)
        </th>
        <th>
            @* displays heading for column name*@
            @Html.DisplayNameFor(model=>model.Products.Last().Name)
        
        </th>

    </tr>

</thead>
<tbody>

    @foreach(var item in Model.Products)
     {
        <tr>
           <td>@Html.DisplayFor(modelitem=>item.Id) </td>
           <td>@Html.DisplayFor(modelitem=>item.Name) </td>
           <td> 

               <a asp-action="Details"asp-route-id ="@item.Id">Details</a>
           </td>
            <td> 

               <a asp-action="Delete"asp-route-id ="@item.Id">Delete</a>
           </td>
            <td> 

               <a asp-action="Update"asp-route-id ="@item.Id">Update</a>
           </td>

       </tr>

       
     }

</tbody>
</table>
<a asp-action="Create">Create New Product</a>



    <div class="text-center">
    @await Html.PartialAsync("_View")
    </div>